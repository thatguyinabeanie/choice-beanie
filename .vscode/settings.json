{
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "server": "localhost",
      "driver": "PostgreSQL",
      "name": "fuecoco_db",
      "connectString": "postgres://postgres:postgres@localhost:5432/fuecoco-db-development"
    },
    {
      "previewLimit": 50,
      "server": "localhost",
      "driver": "PostgreSQL",
      "name": "fuecoco_db",
      "connectString": "postgres://postgres:postgres@db:5432/fuecoco-db-development"
    }
  ],

  "editor.formatOnSave": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.defaultColorDecorators": true,
  "editor.inlayHints.padding": true,

  "sonarlint.connectedMode.project": {
    "connectionId": "thatguyinabeanie",
    "projectKey": "thatguyinabeanie_battle-stadium"
  },

  "terminal.integrated.suggest.enabled": true,
  "testing.coverageToolbarEnabled": true,
  "terminal.integrated.cursorBlinking": true,
  "git.terminalGitEditor": true,

  "testExplorer.codeLens": true,
  "testExplorer.gutterDecoration": true,
  "testExplorer.onStart": "none",
  "testExplorer.onReload": "none",

  "npm.packageManager": "pnpm",

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Don't forget to set the manager to custom when using this option
  "rubyLsp.rubyVersionManager": {
    "identifier": "custom"
  },

  // Adding a custom Ruby bin folder to the PATH
  "rubyLsp.customRubyCommand": "(frum local || asdf current ruby || which ruby)",
  "rubyLsp.indexing": {
    "excludedPatterns": [
      "**/test/**.rb",
      "frontend/**",
      "./devcontainer/**",
      ".github/**",
      ".sonarlint/**",
      "**/.turbo/**",
      ".turbo/**",
      ".vscode/**",
      "**/node_modules/**",
      "node_modules/**"
    ],
    "includedPatterns": ["**/bin/**"],
    "excludedGems": ["rubocop", "rubocop-performance"],
    "includedPatterns": ["rake"],
    "excludedMagicComments": ["compiled:true"]
  },

  "rubyTestExplorer.rspecDirectory": "backend/spec",
  "rubyTestExplorer.minitestDirectory": "backend/test",

  "cSpell.words": [
    "Anson",
    "clsx",
    "connorshea",
    "dbaeumer",
    "devcontainer",
    "devcontainers",
    "esbenp",
    "Expt",
    "gitblame",
    "iliazeus",
    "Jacano",
    "Koichi",
    "mikaello",
    "mtxr",
    "mutantdino",
    "nextjs",
    "nextui",
    "ossdata",
    "rdbg",
    "resourcemonitor",
    "rswag",
    "rubocop",
    "Sasada",
    "sqltools",
    "thatguyinabeanie",
    "vscodeintellicode",
    "waderyan"
  ]
}
